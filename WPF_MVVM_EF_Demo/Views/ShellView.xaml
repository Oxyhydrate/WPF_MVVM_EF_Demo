<Window
    x:Class="Demo.UI.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:Demo.UI.ViewModels"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    WindowStyle="None"
    mc:Ignorable="d"
    BorderThickness="0" 
    SizeChanged="Window_SizeChanged">
    <Window.Resources />
    


    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>



        <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFDAF1E0" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.Background>
                <SolidColorBrush Color="#FFB4E4A9" />
            </Grid.Background>
            <TextBlock
                Grid.RowSpan="2"
                Margin="38,5"
                HorizontalAlignment="Left"
                FontSize="30"
                FontWeight="Bold"
                Foreground="Green"
                Text="МГС" />

            <!--<SolidColorBrush Color="#FFA03B24" />    <SolidColorBrush Color="#FF8BC34A" />-->
            <StackPanel
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button x:Name="FindAbonents" Margin="5" Padding="8">Поиск</Button>
                <Button x:Name="ClearSearchingText" Margin="5" Padding="8">Очистить</Button>
                <Button x:Name="ConnectDB" Margin="5" Padding="8">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ConnectDBButtonText}"/>
                            <ToggleButton x:Name="IsConnected" Background="#FF648D34" Margin="5 0 0 0"/>
                        </StackPanel> 
                    </Button.Content>
                    
                </Button>
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Click="MinimizeWindow"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <md:PackIcon Kind="WindowMinimize" />
                </Button>
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Click="MaximizeWindow"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <md:PackIcon Kind="WindowMaximize" />
                </Button>
                
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Click="CloseApp"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <md:PackIcon Kind="Power" />
                </Button>

            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Image
                Grid.RowSpan="2"
                Width="110"
                Margin="15"
                HorizontalAlignment="Center"
                Source="H:\Demo\WPF_MVVM_EF_Demo\WPF_MVVM_EF_Demo\img\gerb.ico" />
            <Button Margin="5">Главная</Button>
            <Button Margin="5">Абонент</Button>
            <Button Margin="5">Лицевой счет</Button>
            <Button Margin="5">Телефон</Button>
            <Button Margin="5">Счет</Button>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <RadioButton Margin="5" Content="По названию" IsChecked="{Binding ByOWNER}" />
                    <RadioButton Name="ByINN" Margin="5" Content="По ИНН" IsChecked="{Binding ByINN}" />
                    <RadioButton Name="ByBAN" Margin="5" Content="По ЛС" IsChecked="{Binding ByBAN}"/>
                    <RadioButton Name="ByMSISDN" Margin="5" Content="По номеру телефона" IsChecked="{Binding ByMSISDN}"/>
                    <RadioButton Name="ByBILL" Margin="5" Content="По счёту" IsChecked="{Binding ByBILL}"/>
                </StackPanel>

                <TextBox
                    x:Name="TextToFind"
                    Grid.Row="0"
                    Margin="5"
                    md:HintAssist.Hint="Введите текст для поиска..."
                    cal:Message.Attach="[Key Enter] = [FindAbonents];" />

            </StackPanel>


            <DataGrid
                x:Name="AbonentsList"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                AutoGenerateColumns="False"
                Margin="5 0 5 5"
                CanUserAddRows="False">
                
                <DataGrid.Columns>

                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="200"
                        Binding="{Binding Path=OWNER}"
                        Header="Название организации" />
                    <DataGridTextColumn Binding="{Binding Path=INN_PASSPORT}" Header="ИНН" />
                    <DataGridTextColumn Binding="{Binding Path=KPP}" Header="КПП" />
                    <DataGridTextColumn Binding="{Binding Path=DIRECTOR}" Header="Директор" />
                    <DataGridTemplateColumn Header="Лицевой счет">
                        <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=SelectedBAN}" />
                                        </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ListView ItemsSource="{Binding Path=BANS}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Path=BAN}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Номер телефона">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=SelectedMSISDN}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ListView ItemsSource="{Binding Path=BANS}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ListView ItemsSource="{Binding Path=NUMBERS}">
                                                <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding Path=MSISDN}" />
                                                </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.AlternatingRowBackground>
                    <SolidColorBrush Color="#FFDAF1E0" />
                </DataGrid.AlternatingRowBackground>

            </DataGrid>
        </Grid>


    </Grid>
    
</Window>

